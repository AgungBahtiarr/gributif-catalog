---
import { Image } from "astro:assets";

const { artist } = Astro.props;
---

<div>
  <div class="artist-profile flex flex-col gap-4 items-center">
    <div class="flex justify-start gap-4 w-full items-center">
      <div class="avatar-wrapper">
        <div class="avatar">
          <div class="w-24 rounded-full">
            <Image
              src={artist.image}
              alt={artist.name}
              width={100}
              height={100}
            />
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-1">
        <span class="font-semibold">{artist.name}</span>
        <p class="max-w-[80%] text-gray-300 text-sm">
          {artist.skill}
        </p>
      </div>
    </div>
    <div class="profile-description">
      {artist.description}
    </div>
  </div>
</div>
