---
const { products } = Astro.props;
import { Image } from "astro:assets";

---

<main>
  <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
    <div class="grid grid-cols-1 gap-6 lg:gap-y-32 md:grid-cols-2">
      {
        products.map((product) => {
          return (
            <a href={`/product/${product.slug}`}>
              <figure>
              <Image
                class="w-full rounded-3xl shadow-2xl"
                src={product.data.cover}
                alt="product"
                width="1310"
                height="873"
              />
              <div class="mt-4 flex justify-between px-6">
                <div>
                  <h3 class="text-lg text-negroni-500">
                    <span>
                      {product.data.name}
                    </span>
                  </h3>
                  <p class="mt-1 text-sm font-medium leading-6 text-negroni-500">
                    {product.data.category}
                  </p>
                </div>
                <p class="text-base text-tomato-500">Rp. {product.data.price.toLocaleString('id-ID')}</p>
              </div>
            </figure>
            </a>
            
          );
        })
      }
    </div>
  </div>
</main>
